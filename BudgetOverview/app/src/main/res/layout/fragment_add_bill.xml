<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/addNameEdit"
        android:layout_width="155dp"
        android:layout_height="55dp"
        android:alpha=".7"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="15"
        android:singleLine="true"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="@+id/addNameLabel"
        app:layout_constraintStart_toEndOf="@+id/addNameLabel"
        app:layout_constraintStart_toStartOf="@+id/addDueDateEdit" />

    <TextView
        android:id="@+id/addAmountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_amount_label"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/addNameLabel"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36" />

    <TextView
        android:id="@+id/addNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginBottom="32dp"
        android:text="@string/add_name_label"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/addAmountLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/addDueDateLabel"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="32dp"
        android:text="@string/add_due_date_label"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/addAmountLabel"
        app:layout_constraintHorizontal_bias="0.684"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addAmountLabel"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/addDueDateEdit"
        android:layout_width="44dp"
        android:layout_height="47dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:alpha=".7"
        android:ems="10"
        android:inputType="date"
        android:maxLength="2"
        android:singleLine="true"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="@+id/addDueDateLabel"
        app:layout_constraintStart_toEndOf="@+id/addDueDateLabel" />

    <EditText
        android:id="@+id/addAmountEdit"
        android:layout_width="86dp"
        android:layout_height="42dp"
        android:alpha=".7"
        android:ems="10"
        android:inputType="numberDecimal"
        android:maxLength="7"
        android:singleLine="true"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="@+id/addAmountLabel"
        app:layout_constraintStart_toStartOf="@+id/addDueDateEdit" />

    <Button
        android:id="@+id/add_addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:text="@string/add_button_text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addDueDateLabel"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>